@model IEnumerable<Aplicacion.Models.Tarjeta>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutGestion.cshtml";
}


<html>
<head>
    <link href="~/CSS/IndexTarjetaCSS.css?=." time() rel="stylesheet" type="text/css" />
    <script src="https://kit.fontawesome.com/df4406056c.js" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Institucion_ID)
            </th>
            <th>

                @Html.DisplayNameFor(model => model.EsActivo)
            </th>
            <th>Acciones</th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Institucion_ID)
            </td>
            @if (Html.DisplayFor(modelItem => item.EsActivo).Equals("0"))
            {
                <td>
                    Activo
                </td>
            }
            else
            {
                <td>
                    Desactivado
                </td>
            }
            <td>

                <a href="@Url.Action("Edit","Tarjeta", new { id = item.ID })"><i class="fas fa-pencil-alt"></i></a>
                <a href="@Url.Action("Inactivar","Tarjeta", new { id = item.ID })"><i class="fas fa-minus-circle"></i></a>

            </td>
        </tr>
        }

    </table>
    </body>
</html>
