@model IEnumerable<Aplicacion.Models.Institucion>

@{


    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutGestion.cshtml";
}

<html>
<head>
    <link href="~/CSS/IndexInstitucionCSS.css?=." time() rel="stylesheet" type="text/css" />
    <script src="https://kit.fontawesome.com/df4406056c.js" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identificador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EsActivo)
            </th>
            <th>Acciones</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Identificador)
                </td>
                @if (Html.DisplayFor(modelItem => item.EsActivo).Equals("1"))
                {
                    <td>
                        Activo
                    </td>
                }
                else
                {
                    <td>
                        Inactivo
                    </td>
                }
                <td>


                    <a href="@Url.Action("Edit","Institucion", new { id = item.ID })"><i class="fas fa-pencil-alt"></i></a>
                    <a href="@Url.Action("Inactivar","Institucion", new { id = item.ID })"><i class="fas fa-minus-circle"></i></a>


                </td>
            </tr>
        }


    </table>
</body>
</html>
