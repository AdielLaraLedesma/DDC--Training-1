@model Aplicacion.Models.Institucion

@{
    ViewBag.Title = "Inactivar";
    Layout = "~/Views/Shared/_LayoutGestion.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inactivar</title>
    <link href="~/CSS/InactivarInstitucionCSS.css?=." time() rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="ventanaInactivar">
        <div class="header">
            Inactivar Institucion
        </div>
        <div class="container">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Identificador)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Identificador)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Inactivar" class="btn btn-default" /> 
                </div>
            }
        </div>
    </div>
</body>
</html>
